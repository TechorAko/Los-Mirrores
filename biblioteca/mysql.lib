function convert_array_values($array) {
    $conversao = NULL; $i = 0;
    foreach($array as $value) {
        if($i == count($array)-1) {break;}
        $conversao .= "'". $value ."',";
        $i++;
    }
    $conversao .= "'". end($array) ."'";
